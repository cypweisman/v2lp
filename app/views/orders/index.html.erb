<div class="page">
  <h1>Orders</h1>

  <div class="search">
    <%= form_tag(orders_path, method: "get") do %>
      <%= label_tag(:q, "Search By Movie Title:") %>
      <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>
    <div class="button">
       <%= form_tag(orders_path, method: "get") do %>
          <%= submit_tag "Refresh", :name => nil %>
      <% end %>
    </div>
  </div>


  <div>
    <table class="table">
      <tr>
         <th>Order Number</th>
         <th>Order Date</th>
         <th>Order Total</th>
         <th>Movie Title</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at %></td>
          <td><%= order.total %></td>
          <td><%= order.showtime.movie.title %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>