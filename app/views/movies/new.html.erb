<div class="page">
  <h1>Create Movie</h1>

  <% if @errors %>
    <div class="errors">
      <%= render partial: "partials/errors", locals: { errors: @errors } %>
    </div>
  <% end %>

  <div >
    <%= form_for @movie, {action: "create"} do |f| %>
      <fieldset>
        <div class="form-group">
          Movie Title <%= f.text_field :title, class: "form-control col-sm-6" %>
        </div>
        <div class="form-group">
          Runtime <%= f.number_field :runtime, class: "form-control col-sm-6" %>
        </div>
          <%= f.submit "Create", class: "btn btn-primary" %>
        <%= link_to "Cancel", showtimes_path %>
      </fieldset>
    <% end %>
  </div>
</div>